<section id="spots-wrapper">
    <ul class="spot-container">
        {{#each user.favorites}}
        <li>
            <div class="spot-infos">
                <i data-id="{{this._id}}" class=" fas fa-times"></i>
                <h4>{{this.spotName}}</h4>
                <p>{{this.region}}</p>
                <p>{{this.maxWindValue}} noeuds max attendus</p>
                <button><a href="{{this.url}}">Go on windguru</a></button>
            </div>
        </li>
        {{/each}}
    </ul>
</section>